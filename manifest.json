{
    "manifest_version": 3,
    "name": "Site Modeling Productivity Tool",
    "version": "1.0",
    "description": "Copy DR name, Opportunity name, start time and time of completion to clipboard.",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "content_scripts": [
        {
            "js": [
                "scripts/content.js"
            ],
            "matches": [
                "https://sunrun.my.salesforce.com/aDE6Q000008*"
            ]
        }
    ],
    "permissions": ["clipboardWrite"]
}